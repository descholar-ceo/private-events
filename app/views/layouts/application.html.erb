<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navbar -->
    <nav>
        <div class="nav-container">
          <div class="navbar-brand">
            <%= link_to root_path, class: "navbar-item" do %>
              <h1 class="title is-5 has-text-white">Private EventBrite</h1>
            <% end %>
          </div>
          <div class="nav-menu">
            <div class="navbar-end">
              <div class="field is-grouped">
                <p class="control">
                  <%= display_create_button %>
                </p>
                  <%= display_user_signup_or_login %>
              </div>
            </div>
          </div>
        </div>
      </nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
