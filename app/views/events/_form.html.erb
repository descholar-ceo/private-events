<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

    <% else %>
    <div class="form-inputs">
    <%= form.label :event_name, "Event Name"%>
    <%= form.text_field :event_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "event_name" }%><br/><br/>
    <%= form.label :event_location, "Event Location"%>
    <%= form.text_field :event_location,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "event_location" }%><br/><br/>
    <%= form.label :event_date, "Event Date"%>
    <%= form.date_field :event_date,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "event_date" }%><br/><br/>
  </div>
  <% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
